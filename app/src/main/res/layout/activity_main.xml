<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcula Tu Edad!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintVertical_bias="0.022" android:id="@+id/txtTitulo" android:textSize="24sp"
            android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txtAnioNacimiento"
            android:hint="AÃ±o de Nacimiento (ejm: 2000)" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo"/>
    <Button
            android:text="Calcular"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtBotonCalcular"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="90dp" android:onClick="calculaClick" android:background="@color/colorAccent"/>
    <TextView
            android:text="Te digo Tu edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMuestraEdad" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="321dp" android:layout_marginStart="86dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="233dp"
            tools:layout_editor_absoluteX="292dp" android:id="@+id/button2"/>

</android.support.constraint.ConstraintLayout>